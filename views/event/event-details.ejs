<!-- event-details.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event Details</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1>Event Details</h1>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= event.name %></h5>
          <p class="card-text"><strong>Type:</strong> <%= event.type %></p>
          <p class="card-text">
            <strong>Owner Name:</strong> <%= event.owner_full_name %>
          </p>
          <p class="card-text">
            <strong>Owner Phone:</strong> <%= event.owner_phone %>
          </p>
          <p class="card-text">
            <strong>Address:</strong> <%= event.address %>
          </p>
          <p class="card-text">
            <strong>Start Date:</strong> <%= event.start_date %>
          </p>
          <p class="card-text">
            <strong>End Date:</strong> <%= event.end_date %>
          </p>
          <p class="card-text"><strong>Halls:</strong></p>
          <ul>
            <% halls.forEach(function(hall) { %>
            <li><%= hall.name %></li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
